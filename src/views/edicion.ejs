<%- include("partials/head") %>

<body>
    
    <%- include("partials/navbar.ejs")%>

    <form action="/edicion/<%=imagen.id%>" method="post" enctype="multipart/form-data">
        <div class="container p-4" style="background-color: white;">
            <div class="form-group">
                <label for="formGroupExampleInput">Titulo</label>
                <input type="text" class="form-control" id="formGroupExampleInput" name="title" value="<%=imagen.Titulo%>">
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput2">Ingresa una imagen</label>
                <input type="file" class="form-control" id="formGroupExampleInput2" name = "image" [value] = "<%=imagen.url%>">
                <div class="card mt-2" style="width: 18rem;">
                    <img class="card-img-top" src="<%=imagen.url%>" alt="Card image cap">
                    
                  </div>
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput2">Descripcion</label>
                <textarea name="description" id="" class="form-control"><%=imagen.Description%></textarea>
                <button type="submit" class="btn btn-success btn-block mt-2">Editar</button>
              </div>
        </div>
        
      </form>
</body>